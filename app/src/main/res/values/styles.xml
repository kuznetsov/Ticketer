<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ClickableWidgetStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="PillShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AutocompleteTextViewMaterialStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:inputType">textAutoComplete|textCapWords</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

</resources>
